<%= form_for @recipe do |r| %>
  <% if @recipe.errors %>
    <ul>
      <% @recipe.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  <% end %>

  <%= r.label :name %>
  <%= r.text_field :name %>

  <br></br>

  <%= r.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>

  <br></br>

  <%= r.submit %>
<% end %>
